@model IEnumerable<LSD.Models.Promocao>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Criar Nova Promoção</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pontos de Viagem
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DotPromo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
