@model LSD.Models.Promocao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Promoção</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DotPromo" class="control-label">Quantos pontos precisam para ativar essa promoção?</label>
                <input asp-for="DotPromo" class="form-control" />
                <span asp-validation-for="DotPromo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId" class="control-label">Qual destino está em promoção?</label>
                <select asp-for="DestinoId" class ="form-control" asp-items="ViewBag.DestinoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar " class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
