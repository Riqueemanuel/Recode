@{
    ViewData["Title"] = "Contatos";
}
<h1>@ViewData["Title"]</h1>
<div>
    <h1>Deixe seu Contato</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="" class="control-label">Nome</label>
                <input for="" class="form-control" placeholder="Antonio José da Silva"/>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Email</label>
                <input for="" type="email" class="form-control" placeholder="seuemail@aqui.com.br" required/>
            </div>
             <div class="form-group">
                <label for="" class="control-label">Telefone</label>
                <input for="" class="form-control" placeholder="(   ) Telefone"/>
            </div>
             <div class="form-group">
                <label for="" class="control-label">Comentário</label>
                <textarea class="form-control" name="w3review" rows="4" cols="50" placeholder="Deixe seu comentário aqui."></textarea>
            </div>
            <div class="form-group">
                <input type="button" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>